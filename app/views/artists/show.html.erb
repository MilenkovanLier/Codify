<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @artist.name %>
</p>

<h4>List of songs</h4>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><%= link_to song.name, artist_song_path(song.artist_id, song.id) %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no songs for this artist.</p>
<% end %>


<%= image_tag @artist.image%>
<div id="footer">
  <div class="footer-buttons">
    <ul>
      <li><label><input type="radio" name="new-song" value=""><%= link_to 'New Song', new_artist_song_path(@artist.id) %></label></li>
      <li><label><input type="radio" name="back" value=""><%= link_to 'Back', artists_path %></label></li>
    </ul>
  </div>
</div>
